<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/card_margin"
    android:layout_marginEnd="@dimen/card_margin"
    android:layout_marginBottom="12dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/habit_card_background"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="0dp"
    app:strokeColor="@color/habit_card_stroke"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_medium">

        <TextView
            android:id="@+id/textEmoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\uD83D\uDCA7"
            android:textSize="28sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/groupText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@id/checkComplete"
            app:layout_constraintStart_toEndOf="@id/textEmoji"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Drink Water"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Stay hydrated throughout the day"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:alpha="0.7" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/checkComplete"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/selector_habit_check"
            android:backgroundTint="@null"
            android:button="@null"
            android:gravity="center"
            android:padding="0dp"
            app:layout_constraintBottom_toBottomOf="@id/groupText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textProgressValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="0/1"
            android:textColor="@color/text_secondary"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="@id/groupText"
            app:layout_constraintTop_toBottomOf="@id/groupText" />

        <TextView
            android:id="@+id/textProgressPercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0%"
            android:textColor="@color/text_secondary"
            android:textSize="13sp"
            app:layout_constraintBaseline_toBaselineOf="@id/textProgressValue"
            app:layout_constraintEnd_toEndOf="parent" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="@dimen/progress_height"
            android:layout_marginTop="8dp"
            android:max="100"
            android:progress="0"
            android:progressBackgroundTint="@color/habit_progress_track"
            android:progressTint="@color/habit_progress"
            android:progressBackgroundTintMode="src_in"
            android:progressTintMode="src_in"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/groupText"
            app:layout_constraintTop_toBottomOf="@id/textProgressValue"
            app:layout_constraintBottom_toTopOf="@id/actionRow" />

        <LinearLayout
            android:id="@+id/actionRow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="end"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/groupText"
            app:layout_constraintTop_toBottomOf="@id/progressBar">

            <ImageButton
                android:id="@+id/btnCalendar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_icon_button"
                android:contentDescription="@string/calendar_view"
                android:padding="8dp"
                android:tint="@color/secondary_30"
                app:srcCompat="@drawable/material_ic_calendar_black_24dp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/btnEdit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_icon_button"
                android:contentDescription="@string/edit_habit"
                android:padding="8dp"
                android:tint="@color/secondary_30"
                app:srcCompat="@drawable/ic_edit_24" />

            <ImageButton
                android:id="@+id/btnDelete"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_icon_button"
                android:contentDescription="@string/delete_habit"
                android:padding="8dp"
                android:tint="@color/accent_10_danger"
                app:srcCompat="@drawable/ic_delete_24" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
